//---------------------------------------------------------------------------

#pragma hdrstop
 #include <vcl.h>
#include "PtrLista.h"
//---------------------------------------------------------------------------
void PtrLista::Crear()
{
	longitud=0; ptrElementos = NULL;
}

bool PtrLista::Vacio()
{
	return (longitud==0);
}

 direccion PtrLista::Primero()
 {   if (Vacio())
	 {
	 ShowMessage("Lista Vacía");
	 return NULL;
	 }
	 else
	 {
	 return ptrElementos;
	 }
 }

 direccion PtrLista::Fin()
 {
	 if (Vacio())
	 {
	 ShowMessage("Lista Vacía");
	 return NULL;
	 }
	 else
	 {
	 direccion x = ptrElementos;
	 direccion ptrFin;
	 while (x!=NULL)
		 {
					  ptrFin=x;
					  x =x->sig;
		 }
         return ptrFin;
     }
 }
 void PtrLista::Inserta(direccion p,int dato)
 {
	if (Vacio()) {
       NodoL* x = new NodoL ;
	}
 }
#pragma package(smart_init)
